header 
  h1 
    a(href="/").material-icons nights_staySW
  
  
  nav 
    ul.nav
      li
        a(href="/search")
          i.material-icons search
        
      if loggedIn
        li.login
          if !loggedInUser.avatarUrl
            p.header__avatar.no-img
            
          else
            img(src=`${loggedInUser.socialOnly ? "":"/"}` + loggedInUser.avatarUrl).header__avatar

          span #{loggedInUser.name}
            i.material-icons expand_more
            
        li 
          a(href="")
            i.material-icons notifications
            | 
      else
        li 
          a(href="/join")
            i.material-icons person_add
            | Join
        li 
          a(href="/login")
            i.material-icons login
            | Login
          
    ul.drop-menu
      li 
        a(href="/videos/upload")
          span.material-icons upload
          | Upload Video
      li 
        a(href=`/users/${loggedInUser._id}`)
          span.material-icons account_circle 
          | My Channel
      li
        a(href="/users/edit")
          span.material-icons manage_accounts
          | Edit Profile
      li 
        a(href="/users/logout")
          span.material-icons logout 
          | Logout
