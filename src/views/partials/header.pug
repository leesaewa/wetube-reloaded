header 
  h1 
    a(href="/home").eng 
      img(src="/hogwarts.png", alt="호그와트 로고")
      span MARAUTUBE
  
  div.search-wrap
    form(method="GET" action="/search")
      input(placeholder="Search by title", type="text", name="keyword")
      input(type="submit", name="" value="Search now").hover-link
  
  nav 
    ul.nav
      li
        a(href="/search")
          i.material-icons search
        
      if loggedIn
        li.login
          if !loggedInUser.avatarUrl
            p.avatar-img.no-img
            
          else
            img(src=`${loggedInUser.socialOnly ? "":"/"}` + loggedInUser.avatarUrl, crossorigin).avatar-img

          a(href="javascript:void(0)")
            span #{loggedInUser.name}
            i.material-icons expand_more
            
        li 
          a(href="javascript:void(0)")
            i.material-icons notifications
            | 
      else
        li 
          a(href="/join")
            i.material-icons person_add
            | Join
        li 
          a(href="/login")
            i.material-icons login
            | Login
          
    ul.drop-menu
      li 
        a(href="/videos/upload")
          span.material-icons upload
          | Upload Video
      li 
        a(href=`/users/${loggedInUser._id}`)
          span.material-icons account_circle 
          | My Channel
      li
        a(href="/users/edit")
          span.material-icons manage_accounts
          | 비밀의 방 Edit Profile
      li 
        a(href="/users/logout")
          span.material-icons logout 
          | 마법의 장난 끝
