extends ../base
include ../mixins/video.pug

block content
  div.profile__data
    if loggedInUser.avatarUrl
      img(src=`${loggedInUser.socialOnly ? "":"/"}` + loggedInUser.avatarUrl, width="100", height="100", crossorigin)
  h3=user.name
  div.video-grid
    each video in user.videos
      +video(video)
    else
      span.empty__message No videos found