extends ../base
include ../mixins/video.pug

block content
  h3 #{user.name}Ïùò Profile
  div.profile__data
    if user.avatarUrl
      img(src=`${user.socialOnly ? "":"/"}` + user.avatarUrl, width="100", height="100", crossorigin)
    else 
      p.header__avatar.no-img
  div.video-grid
    each video in user.videos
      +video(video)
    else
      span.empty__message No videos found